#!/bin/sh
#
# Colorizes and aligns irssi irc logs

cols=$(tput cols)

aligner='
/^[0-9][0-9]:[0-9][0-9] </ {

  gsub(/<|>/, "", $2)
  s = sprintf("%s %-14s", $1, $2);

  for (i=3; i <= NF; i++) {
    if (length(s) + length($i) + 1 > '$cols') {
      printf "%s\n", s
      s = "                    "
    }
    if (length($i) + 20 > '$cols') {
      printf "\n  %s\n", $i
    } else {
      s = s $i
    }

    if (i < NF) {
      s = s OFS;
    } else {
      printf "%s\n", s
    }
  }
}
'


awk "$aligner" $1
