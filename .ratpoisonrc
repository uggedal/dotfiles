#
# General
#

startup_message off

#
# Keybindings
#

# Unneeded or remapped
unbind a
unbind C-a
unbind A
unbind C-A
unbind b
unbind C-b
unbind c
unbind C-c
unbind f
unbind C-f
unbind F
unbind C-g
unbind C-i
unbind k
unbind C-k
unbind K
unbind C-K
unbind l
unbind C-l
unbind m
unbind C-m
unbind C-r
unbind C-s
unbind C-S
unbind v
unbind C-v
unbind V
unbind C-V
unbind C-w
unbind x
unbind C-x
unbind Return
unbind C-Return
unbind Tab
unbind M-Tab
unbind space
unbind C-space
unbind C-exclam
unbind C-underscore
unbind C-apostrophe
unbind Left
unbind Right
unbind Up
unbind Down
unbind C-Left
unbind C-Right
unbind C-Up
unbind C-Down

# Terminal
bind Return exec urxvtc
bind S-Return colon exec urxvtc -e 

# Frame focus
bind h focusleft
bind l focusright
bind k focusup
bind j focusdown

# Frame movement
bind H exchangeleft
bind L exchangeright
bind K exchangeup
bind J exchangedown

# Other
bind c delete
bind d time

#
# Style
#

set font "DejaVu Sans Mono-10"
set border 2
set barborder 0
set fwcolor #93a1a1
set bwcolor #fdfaf6
set fgcolor #657b83
set bgcolor #eee8d5

#
# Windows
#

set bargravity n

set winname class

unmanage mpv
