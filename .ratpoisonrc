#
# General
#

startup_message off

#
# Groups
#

exec rpws init 6 -a

#
# Windows
#

set bargravity n
set winname class

unmanage mpv

#
# Style
#

set font "DejaVu Sans Mono-10"
set border 2
set barborder 1
set barpadding 4 2
set fwcolor #93a1a1
set bwcolor #fdfaf6
set fgcolor #657b83
set bgcolor #fdfaf6

#
# Keybindings
#

# Unneeded or remapped
unbind 0
unbind 1
unbind 2
unbind 3
unbind 4
unbind 5
unbind 6
unbind 7
unbind 8
unbind 9
unbind minus
unbind a
unbind C-a
unbind A
unbind C-A
unbind b
unbind C-b
unbind c
unbind C-c
unbind f
unbind C-f
unbind F
unbind C-g
unbind C-i
unbind k
unbind C-k
unbind K
unbind C-K
unbind l
unbind C-l
unbind m
unbind C-m
unbind C-r
unbind C-s
unbind C-S
unbind v
unbind C-v
unbind V
unbind C-V
unbind C-w
unbind x
unbind C-x
unbind period
unbind Return
unbind C-Return
unbind Tab
unbind M-Tab
unbind space
unbind C-space
unbind exclam
unbind C-exclam
unbind C-underscore
unbind C-apostrophe
unbind Left
unbind Right
unbind Up
unbind Down
unbind C-Left
unbind C-Right
unbind C-Up
unbind C-Down

# Exec
bind period exec

# Terminal
bind Return exec urxvtc
bind S-Return colon exec urxvtc -e 

# Frame focus
bind h focusleft
bind l focusright
bind k focusup
bind j focusdown

# Frame movement
bind H exchangeleft
bind L exchangeright
bind K exchangeup
bind J exchangedown

# Group focus
bind 1 rpws1
bind 2 rpws2
bind 3 rpws3
bind 4 rpws4
bind 5 rpws5
bind 6 rpws6

# Group movement
bind exclam rpwsm1
bind at rpwsm2
bind numbersign rpwsm3
bind dollar rpwsm4
bind percent rpwsm5
bind asciicircum rpwsm6

# Other
bind c delete
bind d time
