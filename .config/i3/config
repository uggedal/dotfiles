set $mod Mod1

set $WHITE "#ebdbb2"
set $LIGHT "#a89984"
set $MEDIUM "#928374"
set $DARK "#32302f"
set $BLACK "#282828"
set $RED "#cc241d"
set $ORANGE "#d79921"
set $YELLOW "#fabd2f"
set $GREEN "#98971a"
set $BLUE "#458588"

set $FONT_ANTIALIASED "pango:DejaVu Sans Mono 11"
set $FONT_BITMAP "-xos4-terminus-bold-r-normal--16-160-72-72-c-80-iso8859-1"

font $FONT_ANTIALIASED

set $BORDER 4
new_window normal $BORDER
for_window [class="^URxvt$"] border pixel $BORDER
for_window [class="^Chromium"] border none

for_window [class="^Vimb$"] focus child, layout tabbed, focus

client.focused $MEDIUM $MEDIUM $BLACK $ORANGE
client.focused_inactive $BLACK $BLACK $MEDIUM $BLACK
client.unfocused $BLACK $BLACK $MEDIUM $BLACK
client.urgent $RED $RED $LIGHT $BLACK

focus_follows_mouse no
floating_modifier $mod

bindsym $mod+Shift+Return exec --no-startup-id urxvtc
bindsym $mod+Shift+c kill
bindsym $mod+p exec --no-startup-id dmenu_run -fn $FONT_BITMAP -nf $WHITE -nb $BLACK -sf $GREEN -sb $BLACK -l 5 -p '>'

bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

bindsym $mod+f fullscreen

bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle

bindsym $mod+a focus parent

set $W1 " 1 "
set $W2 " 2 "
set $W3 " 3 "
set $W4 " 4 "
set $W5 " 5 "
set $W6 " 6 "
set $W7 " 7 "
set $W8 " 8 "
set $W9 " 9 "

bindsym $mod+1 workspace $W1
bindsym $mod+2 workspace $W2
bindsym $mod+3 workspace $W3
bindsym $mod+4 workspace $W4
bindsym $mod+5 workspace $W5
bindsym $mod+6 workspace $W6
bindsym $mod+7 workspace $W7
bindsym $mod+8 workspace $W8
bindsym $mod+9 workspace $W9

bindsym $mod+Shift+1 move container to workspace $W1
bindsym $mod+Shift+2 move container to workspace $W2
bindsym $mod+Shift+3 move container to workspace $W3
bindsym $mod+Shift+4 move container to workspace $W4
bindsym $mod+Shift+5 move container to workspace $W5
bindsym $mod+Shift+6 move container to workspace $W6
bindsym $mod+Shift+7 move container to workspace $W7
bindsym $mod+Shift+8 move container to workspace $W8
bindsym $mod+Shift+9 move container to workspace $W9

bindsym $mod+Shift+r restart
bindsym $mod+Shift+q exit

mode "split" {
  bindsym s split v, mode "default"

  bindsym v split h, mode "default"

  bindsym Escape mode "default"
}

bindsym $mod+w mode "split"

mode "resize" {
  bindsym h resize shrink width 10 px or 10 ppt
  bindsym j resize grow height 10 px or 10 ppt
  bindsym k resize shrink height 10 px or 10 ppt
  bindsym l resize grow width 10 px or 10 ppt

  bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

bar {
  colors {
    background $DARK
    statusline $MEDIUM
    separator $DARK

    focused_workspace $DARK $GREEN $WHITE
    active_workspace $DARK $YELLOW $WHITE
    inactive_workspace $DARK $DARK $MEDIUM
    urgent_workspace $DARK $RED $WHITE
  }
  position top
  status_command i3blocks
}
