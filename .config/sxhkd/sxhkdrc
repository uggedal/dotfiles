#
# bpwm hotkeys
#

alt + shift + q
  bspc quit

alt + shift + c
  bspc window -c

alt + {t,f}
  bspc window -t {pseudo_titled,fullscreen}

alt + {_,shift + }{h,j,k,l}
  bspc window -{f,s} {left,down,up,right}

alt + {_,shift + }{1-9}
  bspc {desktop -f,window -d} ^{1-9}

~button1
  bspc pointer -g focus

alt + button{1-3}
  bspc pointer -g {move,resize_side,resize_corner}

alt + !button{1-3}
  bspc pointer -t %i %i

alt + @button{1-3}
  bspc pointer -u

#
# wm independent hotkeys
#

alt + shift + Return
  urxvtc
