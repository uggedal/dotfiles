alt + shift + q
  pkill -f bspwmbar; bspc quit

alt + shift + c
  bspc window -c

alt + shift + Return
  urxvtc

alt + p
  dmenu_run -fn "DejaVu Sans Mono-10" -nb "#eee8d5" -nf "#657b83" -sb "#fdfaf6" -sf "#dc322f"

alt + {_,shift + }{h,j,k,l}
  bspc window -{f,s} {left,down,up,right}

alt + {_,shift + }{1-6}
  bspc {desktop -f,window -d} ^{1-6}

alt + {space,f}
  bspc window -t {floating,fullscreen}
