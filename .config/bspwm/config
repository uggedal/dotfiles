RED='#ffdc322f'

COLOR_FG=$BLACK
COLOR_BG=$WHITE
COLOR_FOCUSED_FG=-
COLOR_FOCUSED_BG=-
COLOR_FOCUSED_UL=$GREEN
COLOR_URGENT_FG=$WHITE
COLOR_URGENT_BG=$RED
COLOR_OCCUPIED_FG=-
COLOR_OCCUPIED_BG=-
