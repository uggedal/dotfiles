MONITOR_WIDTH=$(xrandr -q | awk '/current/ { print $8 }')

PANEL_X=6
PANEL_Y=6
PANEL_WIDTH=$(($MONITOR_WIDTH - $PANEL_X * 2))
PANEL_HEIGHT=20
PANEL_UL=2

FONT=terminus-14

WHITE='#fffdfaf6'
BLACK='#ff657b83'
