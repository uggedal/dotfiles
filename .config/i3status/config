general {
  colors = true
  interval = 1
}

order += "disk /"
order += "wireless wlp3s0"
order += "battery 0"
order += "battery 1"
order += "tztime local"

wireless wlp3s0 {
  format_up = "W: (%quality at %essid) %ip"
  format_down = "W: down"
}

battery 0 {
  format = "%status %percentage %remaining"
}

battery 1 {
  format = "%status %percentage %remaining"
}

tztime local {
  format = "%Y-%m-%d %H:%M"
}

disk "/" {
  format = "%avail"
}
