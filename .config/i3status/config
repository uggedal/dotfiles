general {
  colors = true
  interval = 1
}

order += "wireless wlp3s0"
order += "volume master"
order += "disk /"
order += "battery 0"
order += "battery 1"
order += "tztime local"

wireless wlp3s0 {
  format_up = " %essid %quality "
  format_down = " "
}

volume master {
  format = " %volume% "
  format_muted = " M "
}

disk "/" {
  format = " %avail "
  prefix_type = custom
}

battery 0 {
  format = " %status %percentage %remaining "
  format_down = " "
  last_full_capacity = true
}

battery 1 {
  format = " %status %percentage %remaining "
  format_down = " "
  last_full_capacity = true
}

tztime local {
  format = " %Y-%m-%d %H:%M "
}
